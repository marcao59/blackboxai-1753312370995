<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-layout">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h3>
                    <i class="fas fa-map-marked-alt"></i>
                    Turismo Curitiba
                </h3>
            </div>
            
            <div class="sidebar-nav">
                <ul>
                    <li>
                        <a href="/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">
                            <i class="fas fa-tachometer-alt"></i>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/tourist-points" class="<%= currentPage === 'tourist-points' ? 'active' : '' %>">
                            <i class="fas fa-map-marker-alt"></i>
                            Pontos Turísticos
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/events" class="<%= currentPage === 'events' ? 'active' : '' %>">
                            <i class="fas fa-calendar-alt"></i>
                            Eventos
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/users" class="<%= currentPage === 'users' ? 'active' : '' %>">
                            <i class="fas fa-users"></i>
                            Usuários
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/reviews" class="<%= currentPage === 'reviews' ? 'active' : '' %>">
                            <i class="fas fa-star"></i>
                            Avaliações
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/settings" class="<%= currentPage === 'settings' ? 'active' : '' %>">
                            <i class="fas fa-cog"></i>
                            Configurações
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Bar -->
            <header class="topbar">
                <div class="topbar-left">
                    <button class="sidebar-toggle d-md-none">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1><%= title.replace(' - Turismo Curitiba Admin', '') %></h1>
                </div>
                
                <div class="topbar-right">
                    <div class="user-menu">
                        <a href="#" class="user-menu-toggle">
                            <i class="fas fa-user-circle"></i>
                            <%= adminName %>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        
                        <div class="user-menu-dropdown">
                            <a href="/dashboard/settings">
                                <i class="fas fa-user-cog"></i>
                                Meu Perfil
                            </a>
                            <a href="/dashboard/settings">
                                <i class="fas fa-cog"></i>
                                Configurações
                            </a>
                            <div style="border-top: 1px solid #dee2e6; margin: 0.5rem 0;"></div>
                            <a href="/auth/logout">
                                <i class="fas fa-sign-out-alt"></i>
                                Sair
                            </a>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Content Area -->
            <div class="content-area">
                <%- body %>
            </div>
        </main>
    </div>
    
    <!-- Alert Container -->
    <div id="alert-container"></div>
    
    <!-- Scripts -->
    <script src="/js/main.js"></script>
    
    <!-- Additional scripts -->
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>
